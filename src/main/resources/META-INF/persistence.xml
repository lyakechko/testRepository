<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="hibernate">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!--        <jta-data-source>java:/DefaultDS</jta-data-source>-->
        <!--        <mapping-file>ormap.xml</mapping-file>-->
        <!--        <jar-file>MyApp.jar</jar-file>-->
        <!--        <class>org.acme.Employee</class>-->
        <!--        <class>org.acme.Person</class>-->
        <class>DBO.Courses</class>
        <class>DBO.Student</class>
        <class>DBO.Teacher</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="1234"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/eshop_database?createDatabaseIfNotExists=true"/>
            <property name="hibernate.default_schema" value="eshop_database"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
